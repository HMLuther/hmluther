// CATEGORY SUBNAV, ITEM SUBNAV
.category-subnav, .collection-subnav, .item-subnav {
	// background-color: red;
	margin: 5px 0 5px 0;
	font-size: 0.8em;
	text-transform: uppercase;
	position: relative;
	z-index: 10;
	div {
		border-right: 1px solid #FFFFFF;
		margin: 0;
		padding: 0;
	}
	div.display{
		background-color: #e5e5e5;
		color: #666666;
		padding: 10px 15px;
	}
	a {
		background-color: #e5e5e5;
		color: #666666;
		padding: 10px 15px;
		width: 100%;
		display: inline-block;
	}
	a:hover {
		background-color: #f47321;
		color: #ffffff;
		text-decoration: none;
	}
	button {
		background-color: #e5e5e5;
		border: none;
		color: #666666;
		padding: 10px 15px;
		text-align: left;
		text-transform: uppercase;
		width: 100%;
	}
	a.active, button.active {
		background-color: #c5c5c5;
		color: #FFFFFF;
	}
	button:hover {
		background-color: #f47321;
		color: #FFFFFF;
	}
	.dropdown-menu li a {
		background-color: transparent;
		font-size: 0.8em;
		// text-transform: lowercase;
	}
	.dropdown-menu li button {
		background-color: transparent;
		font-size: 0.8em;
		padding: 3px 20px;
	}
	.dropdown-menu li button:hover {
		color: #666;
	}
	.dropdown-menu li button.active {
		background-color: #f47321;
	}
	.dropdown-menu li:hover {
		background-color: #f5f5f5;
	}
	.sm-lg-icon {
		background-image: url(<%= asset_path 'small_to_large_icon.png' %>);
		background-position: 85% center;
		background-repeat:no-repeat;
		background-size:10% 10px;
	}
	.lg-sm-icon {
		background-image: url(<%= asset_path 'large_to_small_icon.png' %>);
		background-position: 85% center;
		background-repeat:no-repeat;
		background-size:10% 10px;
	}
}



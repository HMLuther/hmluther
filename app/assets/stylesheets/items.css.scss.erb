// CATEGORY-ITEMS-CONTAINER
.category-items-container {
	padding: 0;
	margin: 0;
	position: relative;
	overflow-y: hidden;
	-webkit-overflow-scrolling: touch;
}


// CATEGORY-ITEMS LI
.category-items li {
	border-radius: 2px;
	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
	transition: all 400ms ease-in-out;
	-webkit-transition: all 400ms ease-in-out;
	-moz-transition: all 400ms ease-in-out;
	-ms-transition: all 400ms ease-in-out;
	-o-transition: all 400ms ease-in-out;
}
.category-items li:hover {
	background-color: #f9f9f9;
  color: #333;
}
.category-items li.inactive {
	visibility: hidden;
	opacity: 0;
}


// CATEGORY-ITEM TEXT
.category-items li h4 {
	margin: 7px 0 1px 7px;
}
.category-items li .item-circa {
	font-size: 0.8em;
}


// INFO PANEL
.info-panel {
	p {
		font-size: 0.9em;
		line-height: auto;
	}
}


// ITEM IMAGES
.item-images-container {
	margin-right: -8px;
	margin-top: 5px;
	position: relative;
	overflow: scroll;
	-webkit-overflow-scrolling: touch;
	.item-images {
		width: 50000px;
	}
	.item-images img {
		border: 1px solid #c8c8c8;
		border-radius: 2px;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		float: left;
		margin-bottom: 20px;
		margin-right: 40px;
		padding: 2px;
		height: 500px;
	}
}



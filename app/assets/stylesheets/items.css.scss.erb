// ITEM SUBNAV COLLECTION LIST ITEMS
.category-items .dropdown-menu input[type=submit],
.item-subnav .collection-list .dropdown-menu input[type=submit] {
	border: none;
	background-color: transparent;
	font-size: 0.8em;
	padding: 3px 20px;
	text-transform: uppercase;
}
.category-items .dropdown-menu .assigned,
.item-subnav .collection-list .dropdown-menu .assigned {
	color: #666;
	padding: 3px 0 3px 20px;
	font-size: 0.8em;
	text-decoration: line-through;
	text-transform: uppercase;
	text-wrap:none;
}

.category-items .btn-default {
	background-color: #e5e5e5;
	border:none;
	border-radius: 0;
	color: #777777;
	display: block;
	font-size: 0.7em;
	margin-bottom: 2px;
	text-align: left;
	text-transform: uppercase;
	width: 135px;
}

.category-items .btn-default:hover{
	background-color: #f47321;
	color: #ffffff;
  }

.category-items .dropdown,
.category-items a {
	float: right;
	margin: 5px;
}



// CATEGORY ITEMS
.category-items {
	.btn-default {
		width: 100%;
	}
	h4 {
		color: #f47321;
	}
}

.category-items.one-row {
	list-style-type: none;
	margin: 0;
	padding: 0 0 0 0;
  display: -webkit-box;      /* OLD - iOS 6-, Safari 3.1-6 */
  display: -moz-box;         /* OLD - Firefox 19- (buggy but mostly works) */
  display: -ms-flexbox;      /* TWEENER - IE 10 */
  display: -webkit-flex;     /* NEW - Chrome */
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
  height: 530px;
	li.item {
	  width: 660px;
	  height: 520px;
	  border: 1px solid #c8c8c8;
	  margin: 0 40px 0 0;
	  padding: 5px;
		.item-info {
			min-height: 110px;
		}
		.item-image, .item-info, .item-link {
			padding: 0;
		}
		p {
			line-height: 20px;
			font-weight: 200;
			margin: 7px 0 5px 7px;
		}
	}
}
.category-items.two-rows {
	list-style-type: none;
	padding: 0;
	margin: 0;
  display: -webkit-box;      /* OLD - iOS 6-, Safari 3.1-6 */
  display: -moz-box;         /* OLD - Firefox 19- (buggy but mostly works) */
  display: -ms-flexbox;      /* TWEENER - IE 10 */
  display: -webkit-flex;     /* NEW - Chrome */
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
  height: 525px;
  h4 {
  	font-size: 12px;
  	margin-bottom: 0;
  }
  li.item:nth-child(even) {
  	margin-bottom: 5px;
  }
	li.item {
	  width: 300px;
	  height: 250px;
	  border: 1px solid #c8c8c8;
	  margin: 0 40px 15px 0;
	  padding: 2px;
		cursor: pointer;
		.item-circa {
			display: none;
		}
		.item-info {
			font-size: 0.8em;
			height: 48px;
			.item-description {
				white-space: nowrap;
			  overflow: hidden;
				text-overflow: ellipsis;
			}
		}
		.item-image, .item-info, .item-link {
			padding: 0;
		}
		.item-image .webcomp {
			// width: 296px;
		}
		p {
			line-height: 20px;
			font-weight: 200;
			margin: 0px 0 5px 7px;
		}
	}
}



// ITEM SUBNAV
.category-subnav, .item-subnav {
	// background-color: red;
	margin: 5px 0 5px 0;
	font-size: 0.8em;
	text-transform: uppercase;
	div {
		border-right: 1px solid #FFFFFF;
		margin: 0;
		padding: 0;
	}
	div.display{
		background-color: #e5e5e5;
		color: #999999;
		padding: 10px 15px;
	}
	a {
		background-color: #e5e5e5;
		color: #999999;
		padding: 10px 15px;
		width: 100%;
		display: inline-block;
	}
	a:hover {
		background-color: #f47321;
		color: #ffffff;
		text-decoration: none;
	}
	button {
		background-color: #e5e5e5;
		border: none;
		color: #999999;
		padding: 10px 15px;
		text-align: left;
		text-transform: uppercase;
		width: 100%;
	}
	button:hover {
		background-color: #f47321;
		color: #FFFFFF;
	}
	.sm-lg-icon {
		background-image: url(<%= asset_path 'small_to_large_icon.png' %>);
		background-position: 85% center;
		background-repeat:no-repeat;
		background-size:10% 10px;
	}
	.lg-sm-icon {
		background-image: url(<%= asset_path 'large_to_small_icon.png' %>);
		background-position: 85% center;
		background-repeat:no-repeat;
		background-size:10% 10px;
	}
}

// CATEGORY-ITEMS-CONTAINER
.category-items-container {
	padding: 0;
	margin: 0 -8px 0 0;
	position: relative;
	overflow: scroll;
	-webkit-overflow-scrolling: touch;
}

// CATEGORY-ITEMS
.category-items {
	list-style-type: none;
	margin: 5px 0 0 0;
	position: relative; /** Needed to ensure items are laid out relative to this container **/
	width: 100000px;
	padding: 0;
}

// CATEGORY-ITEMS LI
.category-items li {
	float: left;
	background-color: #ffffff;
	border: 1px solid #c8c8c8;
	border-radius: 2px;
  color: #666;
	cursor: pointer;
	padding: 2px;
	margin-right: 10px;
	margin-bottom: 20px;
	height: 600px;

	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
	-webkit-transition: all 400ms ease-in-out;
	-moz-transition: all 400ms ease-in-out;
	-ms-transition: all 400ms ease-in-out;
	-o-transition: all 400ms ease-in-out;
	transition: all 400ms ease-in-out;
}

.category-items li:hover {
	background-color: #e5e5e5;
  color: #333;
	/*opacity: 0.5;*/
}

.category-items li.inactive {
	visibility: hidden;
	opacity: 0;
}

.category-items li:last-child {
	margin-right: 0;
}


// CATEGORY-ITEM TEXT
.category-items li h4 {
  color: #333;
	margin: 7px 0 1px 7px;
}

.category-items li p {
	font-size: 13px;
	line-height: 20px;
	font-weight: 200;
	margin: 7px 0 5px 7px;
  /* width: 90%; */
}

.category-items li .item-circa {
	font-size: 0.8em;
}

// CATEGORY-ITEMS IMAGES

.category-items li .item-image {
	height: 500px;
}

/*INFO PANEL*/
.info-panel {
	/*background-color: #e5e5e5;*/
	p {
		color: #999;
		font-size: 0.9em;
		line-height: auto;
	}
}


/*ITEM IMAGES */

.item-images-container {
	margin-right: -8px;
	margin-top: 5px;
	position: relative;
	overflow: scroll;
	-webkit-overflow-scrolling: touch;
	// background-color: lightgray;
	.item-images {
		width: 50000px;
	}
	.item-images img {
		border: 1px solid #c8c8c8;
		border-radius: 2px;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		float: left;
		margin-bottom: 20px;
		margin-right: 10px;
		padding: 2px;
	}
}

// SOLD
.category-stamp-sold {
	float: right;
	height: 50px;
	margin: 25px 25px;
}

.item-stamp-sold {
	float: right;
	margin-right: 2em;
	height: 50px;
}

.line-through {
	text-decoration: line-through;
}

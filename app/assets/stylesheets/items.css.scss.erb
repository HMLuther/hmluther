// CATEGORY ITEMS
.category-items {
	h4 {
		color: #f47321;
	}
}

ul.category-items.one-row {
	list-style-type: none;
	margin: 0;
	padding: 10px 0;
  display: -webkit-box;      /* OLD - iOS 6-, Safari 3.1-6 */
  display: -moz-box;         /* OLD - Firefox 19- (buggy but mostly works) */
  display: -ms-flexbox;      /* TWEENER - IE 10 */
  display: -webkit-flex;     /* NEW - Chrome */
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
  height: 620px;
	a.btn {
		float: right;
		margin-top: 88px;
	}
	a.btn-default.collection-add-copy:before {
		content: "Add to Collection"
	}
	a.btn-default.collection-create-copy:before {
		content: "Create Collection"
	}
	.btn-default {
		width: 135px;
	}
	li.item {
	  width: 800px;
	  height: 620px;
	  border: 1px solid #c8c8c8;
	  margin: 0 40px 20px 0;
	  padding: 5px;
	}
}
ul.category-items.two-rows {
	list-style-type: none;
	padding: 10px 0;
	margin: 0;
  display: -webkit-box;      /* OLD - iOS 6-, Safari 3.1-6 */
  display: -moz-box;         /* OLD - Firefox 19- (buggy but mostly works) */
  display: -ms-flexbox;      /* TWEENER - IE 10 */
  display: -webkit-flex;     /* NEW - Chrome */
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
  height: 720px;
	a.btn {
		float: right;
		margin-top: 96px;
	}
	a.btn.collection-add-copy:before,
	a.btn.collection-create-copy:before {
		content: "+"
	}
	.btn-default {
		width: 30px;
	}
	li.item {
	  width: 350px;
	  height: 326px;
	  border: 1px solid #c8c8c8;
	  margin: 0 40px 20px 0;
	  padding: 2px;
		cursor: pointer;
	}
}



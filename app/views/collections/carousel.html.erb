<h1><%= link_to @collection.name, @collection %></h1>
<p><%= @collection.description %></p>
<hr>

<!-- CAROUSEL -->
<div id="carousel-home" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @collection.collection_items.active.each_with_index do |item, index| %>
      <li data-target="#carousel-home" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @collection.collection_items.active.each_with_index do |ci, index| %>
      <div class="<%= index == 0 ? 'item active' : 'item' %>">
        <%= link_to ci.item do %>
          <%= ItemDecorator.decorate(ci.item).thumb_image_tag %>
        <% end %>
        <div class="carousel-caption">
          <h5><%= ci.item.description_short %></h5>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-home" data-slide="prev">
    <!-- <span class="glyphicon glyphicon-chevron-left"></span> -->
  </a>
  <a class="right carousel-control" href="#carousel-home" data-slide="next">
    <!-- <span class="glyphicon glyphicon-chevron-right"></span> -->
  </a>
</div>
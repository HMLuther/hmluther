<div class="row collection-subnav">

	<!-- SHARE -->
	<div class="col-md-4 col-sm-4">
		<div class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">Share <span class="caret"></span></a>
			<ul class="dropdown-menu" role="menu">
				<li><%= link_to "Email", remote_share_collection_path(:collection => @collection.id), :remote => true, title: 'Share this collection' %></li>
				<li class="divider"></li>
				<li><%= link_to 'Present / Preview', slideshow_collection_path(@collection), title: 'Present / Preview' %></li>
			</ul>
		</div>
	</div>
	
	<!-- TEARSHEETS -->
	<div class="col-md-4 col-sm-4">
		<%= link_to 'Print Tearsheets', collection_path(@collection, format: "pdf"), title: 'Print Tearsheets (PDF)', target: "_blank" %>
	</div>

	<!-- EDIT COLLECTION -->
	<div class="col-md-4 col-sm-4">
		<%= link_to 'Edit Collection', edit_collection_path(@collection), title: 'Edit this collection' %>
	</div>

</div>

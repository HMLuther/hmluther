<div class="row collection-subnav">

	<!-- SHARE -->
	<div class="col-md-3 col-sm-3 col-xs-6">
		<div class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">Share <span class="caret"></span></a>
			<ul class="dropdown-menu" role="menu">
				<li><%= link_to "Email", remote_share_collection_path(:collection => @collection.id), :remote => true, title: 'Share this collection' %></li>
				<li class="divider"></li>
				<li><%= link_to 'Present / Preview', slideshow_collection_path(@collection), title: 'Present / Preview', 'data-no-turbolink' => true %></li>
			</ul>
		</div>
	</div>
	
	<!-- TEARSHEETS -->
	<div class="col-md-3 col-sm-3 col-xs-6">
		<%= link_to 'Print Tearsheets', collection_path(@collection, format: "pdf"), title: 'Print Tearsheets (PDF)', target: "_blank" %>
	</div>

	<!-- REQUEST INFORMATION -->
	<div class="col-md-3 col-sm-3 col-xs-6">
		<%= link_to 'Request Info', remote_collection_info_request_path(@collection), 
																:remote => true, title: 'Requestion additional information for the active items in this collection' %>
	</div>

	<!-- EDIT COLLECTION -->
	<div class="col-md-3 col-sm-3 col-xs-6">
		<%= link_to 'Edit Collection', edit_collection_path(@collection), title: 'Edit this collection' %>
	</div>

</div>

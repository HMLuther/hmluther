<%= simple_form_for(@designer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :bio %>
    <%= f.input :active %>
    <%= f.input :include %>
    <%= f.input :omit %>
    <%= f.input :production_date %>
    <%= f.input :website %>
    <%= f.input :filemaker_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<h1>Listing designers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Include</th>
      <th>Omit</th>
      <th>Production Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.name %></td>
        <td><%= designer.active %></td>
        <td><%= designer.list_include %></td>
        <td><%= designer.list_omit %></td>
        <td><%= designer.production_date %></td>
        <td><%= link_to 'Show', designer %></td>
        <td><%= link_to 'Edit', edit_designer_path(designer) %></td>
        <td><%= link_to 'Destroy', designer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Designer', new_designer_path, class: 'btn btn-primary' %>

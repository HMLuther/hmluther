<h1><%= params[:category] %></h1>

<p>All Category Items will be shown here.</p>
<p>Item Count: <%= @items.count %></p>
<p>Container Size: <%= @container_size %>px</p>

<hr>

<table class="table">
  <thead>
    <tr>
      <th>Active</th>
      <th>Description</th>
      <th>Circa</th>
      <th>Sold</th>
      <th>Location</th>
      <th>Reference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.active %></td>
        <td><%= item.description_short %></td>
        <td><%= item.circa %></td>
        <td><%= item.sold %></td>
        <td><%= item.location %></td>
        <td><%= item.reference %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
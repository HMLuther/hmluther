<h1>Listing items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Active</th>
      <th>Description</th>
      <th>Circa</th>
      <th>Sold</th>
      <th>Location</th>
      <th>Reference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.active %></td>
        <td><%= item.description_short %></td>
        <td><%= item.circa %></td>
        <td><%= item.sold %></td>
        <td><%= item.location %></td>
        <td><%= item.reference %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>

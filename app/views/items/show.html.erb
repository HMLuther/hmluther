<!-- SUBNAV -->
<%= render 'item_subnav' %>

<!-- IMAGES -->
<div class="row">
  <div class="col-md-12">
    <div class="item-images-container">
      <div id="item-images" class="item-images" data-container-size="<%= @container_size %>" data-sort="">

        <% if user_signed_in? %>
          <%= link_to @item.default_image_url, :target => "_blank" do %>
            <%= image_tag @item.default_image_url, title: 'Click for hi-res' %>
          <% end %>
        <% else %>
          <%= image_tag @item.default_image_url %>
        <% end %>

        <% if user_signed_in? %>
          <% @item.images.show_list.shuffle.each do |image| %>
            <%= link_to image.url, :target => "_blank" do %>
              <%= image_tag image.url, title: 'Click for hi-res' %>
            <% end %>
          <% end %>
        <% else %>
          <% @item.images.show_list.shuffle.each do |image| %>
            <%= image_tag image.url %>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>

<!-- DETAIL -->
<div class="row">
  <div class="col-md-12">
    <!-- <hr/> -->
  </div>
  <div class="col-md-6 info-panel">
    <h4>General Info</h4>
    <p><%= raw @item.maker_list.map { |t| link_to t.titlecase, designer_path(t) }.join(', ') %></p>
    <p><%= @item.description_short %></p>
    <p><%= @item.circa %></p>
    <p>
      Item: <%= @item.filemaker_id %><br/>
      Location: <%= @item.location %></br/>
      Height: <%= @item.height %> in.</br/>
      Width: <%= @item.width %> in.</br/>
      Depth: <%= @item.depth %> in.</br/>
      Diameter: <%= @item.diameter %> in.
    </p>
  </div>
  <div class="col-md-6 info-panel">
    <h4>Detail</h4>
    <p><%= @item.description %></p>
    <p><%= @item.reference %></p>
    <p>Category: <%= raw @item.category_list.map { |t| link_to t.titlecase, category_path(t) }.join(', ') %></p>
    <% if @item.sold %>
      <%= image_tag 'stamp_sold.png', class: 'item-stamp-sold' %>
    <% end %>
  </div>
</div>

<!-- RECENTLY VIEWED ITEMS -->
<%= render 'layouts/recent_items' %>


<!-- CAROUSEL -->
<div id="carousel-home" class="carousel slide" data-ride="carousel">

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @featured.each_with_index do |item, index| %>
      <li data-target="#carousel-home" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "https://res.cloudinary.com/hzrew79xn/image/upload/v1573595372/sale-graphic-3_hllpgs.jpg" %>
    </div>
    <% @featured.each_with_index do |item| %>
      <div class="item">
        <%= link_to item do %>
          <%= item.featured_image_tag %>
        <% end %>
      </div>
    <% end %>
  </div>

<!--  <div class="carousel-inner">-->

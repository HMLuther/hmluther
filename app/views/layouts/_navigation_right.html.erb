<% if user_signed_in? %>

	<!-- LARGE SCREENS -->
	<li class="dropdown hidden-xs">
		<a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown"><%= current_user.name %> <span class="caret"></span></a>
		<ul class="dropdown-menu" role="menu">
			<li><%= link_to 'Edit Account', edit_user_registration_path %></li>
			<li class="divider"></li>
			<li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
			<% if user_signed_in? && current_user.admin? %>
				<li class="divider"></li>
			  <li class="<%= is_active?(pages_path) %>"><%= link_to 'Pages', pages_path %></li>
			  <li class="<%= is_active?(users_path) %>"><%= link_to 'Users', users_path %></li>
			<% end %>
		</ul>
	</li>

	<!-- SMALL SCREENS -->
	<div class="hidden-sm hidden-md hidden-lg">
		<li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete', class: 'btn btn-default' %></li>
		<li><%= link_to 'Edit Account', edit_user_registration_path, class: 'btn btn-default' %></li>
		<% if user_signed_in? && current_user.admin? %>
		  <li class="<%= is_active?(pages_path) %>"><%= link_to 'Pages', pages_path, class: 'btn btn-default' %></li>
		  <li class="<%= is_active?(users_path) %>"><%= link_to 'Users', users_path, class: 'btn btn-default' %></li>
		<% end %>
	</div>

<% else %>
	<li><%= link_to "Login", remote_login_path, :remote => true, class: 'btn btn-default' %></li>
  <li><%= link_to "Sign up", remote_sign_up_path, :remote => true, class: 'btn btn-default' %></li>
<% end %>

<li><%= link_to "Contact", page_path('about-us'), class: 'btn btn-default' %></li>

<% if user_signed_in? %>
	<li><%= link_to 'Collections', collections_path, class: 'btn btn-default', title: 'Manage my collections' %></li>
<% end %>
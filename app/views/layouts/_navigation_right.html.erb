<% if user_signed_in? %>
	<li class="dropdown">
		<a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown"><%= current_user.name %> <span class="caret"></span></a>
		<ul class="dropdown-menu" role="menu">
			<li><%= link_to 'Edit Account', edit_user_registration_path %></li>
			<li class="divider"></li>
			<li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
			<% if user_signed_in? && current_user.admin? %>
				<li class="divider"></li>
			  <li class="<%= is_active?(users_path) %>"><%= link_to 'Users', users_path %></li>
			<% end %>
		</ul>
	</li>
<% else %>
	<li><%= link_to "Login", remote_login_path, :remote => true, class: 'btn btn-default' %></li>
  <li><%= link_to "Sign up", remote_sign_up_path, :remote => true, class: 'btn btn-default' %></li>
<% end %>

<li><%= link_to "Contact", contact_path, class: 'btn btn-default' %></li>

<% if user_signed_in? %>
	<li><%= link_to 'Collections', collections_path, class: 'btn btn-default', title: 'Manage my collections' %></li>
<% end %>